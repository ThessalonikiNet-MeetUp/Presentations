@page
@model Identity.Pages.Account.VerifyPhoneNumberModel
@{
    ViewData["Title"] = "Verify your phone number";
}

<h1>@ViewData["Title"]</h1>
<h2>Verify your phone number by adding the code you received in your mobile number @Model.Input.PhoneNumber.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Code" class="form-control" autocomplete="code" aria-required="true" placeholder="123456" />
                <label asp-for="Input.Code" class="form-label"></label>
                <span asp-validation-for="Input.Code" class="text-danger"></span>
                <input type="hidden" asp-for="Input.PhoneNumber" />
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Verify</button>
        </form>
    </div>
</div>
